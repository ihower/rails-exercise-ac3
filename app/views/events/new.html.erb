<%= form_for @event, :url => { :controller => 'events', :action => 'create' }, :html => { :class => "foobar" } do |f| %>

    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>

    <%= f.submit "Create" %>

<% end %>